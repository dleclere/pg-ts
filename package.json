{
  "name": "pg-ts",
  "version": "2.2.0",
  "main": "dist/index.js",
  "types": "dist/",
  "module": "src/index.ts",
  "repository": "https://github.com/musicglue/pg-ts",
  "author": "Music Glue",
  "license": "MIT",
  "scripts": {
    "build": "rm -rf dist/  && tsc",
    "format": "prettier --write --parser typescript --trailing-comma all --list-different --print-width 100 'src/**/*.ts'",
    "prepublishOnly": "npm run build",
    "test": "NODE_ENV=test jest --runInBand"
  },
  "jest": {
    "collectCoverage": true,
    "coverageDirectory": "./coverage",
    "coveragePathIgnorePatterns": [
      "<rootDir>/knexfile.ts",
      "<rootDir>/src/db.ts",
      "<rootDir>/build/",
      "<rootDir>/node_modules/",
      "<rootDir>/__tests__/support/*.ts"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 75,
        "functions": 75,
        "lines": 75,
        "statements": 75
      }
    },
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "setupTestFrameworkScriptFile": "<rootDir>/__tests__/setup.ts",
    "transform": {
      "\\.(ts|tsx)$": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testRegex": "/__tests__/.*_test\\.(ts|tsx|js)$"
  },
  "dependencies": {
    "fp-ts": "^0.5.2",
    "lodash": "^4.17.4",
    "pg": "^7.3.0"
  },
  "devDependencies": {
    "@types/jest": "^21.1.1",
    "@types/lodash": "^4.14.76",
    "@types/pg": "^7.1.4",
    "jest": "^21.2.1",
    "prettier": "^1.7.2",
    "ts-jest": "^21.0.1",
    "ts-node": "^3.0.4",
    "tslint": "^5.2.0",
    "typescript": "^2.5.3"
  }
}
